mixin namesOfProducts
    each item in list
        .col-lg-3.col-md-6.col-sm-12.individualProducts
            img.smallMargins.centerImageManual(src=item.img alt='' width='200px' height='200px')
            p Name: #{item.name}
            p Cpu: #{item.cpu}
            p Internal Memory: #{item.internalMemory}
            p Camera: #{item.camera}
            a(href=`/display/${item._id}`)
                .btn.btn-info.smallMargins SEE MORE
                

mixin aboutDescription
    p.normalDescription #{description}

